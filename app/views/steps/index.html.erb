<h1>Listing steps</h1>

<table>
  <thead>
    <tr>
      <th>Instruction</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @steps.each do |step| %>
      <tr>
        <td><%= step.instruction %></td>
        <td><%= link_to 'Show', task_step_path(step.task_id, step.id) %></td>
        <td><%= link_to 'Edit', edit_task_step_path(step.task_id, step.id) %></td>
        <td><%= link_to 'Destroy', task_step_path(step.task_id, step.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Step', new_task_step_path %>
